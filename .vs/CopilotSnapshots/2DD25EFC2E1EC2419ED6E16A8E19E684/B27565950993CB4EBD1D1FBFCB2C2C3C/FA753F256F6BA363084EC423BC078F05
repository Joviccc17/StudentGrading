using Microsoft.EntityFrameworkCore;
using Microsoft.AspNetCore.Mvc;
using StudentGrading.Data;
using System;

namespace StudentGrading.Controllers
{
    public class ResultController : Controller
    {
        private readonly AppDb _context;

        public ResultController(AppDb context)
        {
            _context = context;
        }

        // GET: /Result/Statistics
        public IActionResult Statistics()
        {
            var userRole = HttpContext.Session.GetString("UserRole");
            var userId = HttpContext.Session.GetInt32("UserId");

            if (userId == null)
                return RedirectToAction("Login", "Account");

            // Teachers see all results with user information
            if (userRole == "Teacher")
            {
                var allResults = _context.ExamResults
                    .Include(r => r.Exam)
                    .Include(r => r.User)
                    .OrderByDescending(r => r.Id)
                    .ToList();

                return View("TeacherStatistics", allResults);
            }

            // Students see only their own results
            var studentResults = _context.ExamResults
                .Include(r => r.Exam)
                .Where(r => r.UserId == userId.Value)
                .OrderByDescending(r => r.Score)
                .ToList();

            return View(studentResults);
        }
    }
}

