@model StudentGrading.Models.Exam

@{
    ViewData["Title"] = "Preview Exam";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Exam Header -->
            <div class="card shadow-lg mb-4">
                <div class="card-header bg-warning">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-eye me-2"></i>Preview: @Model.Title
                        </h3>
                        <span class="badge bg-dark fs-6">
                            <i class="fas fa-chalkboard-teacher me-1"></i>Teacher View
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        This is a preview of how the exam will appear to students. You cannot submit answers in preview mode.
                    </div>
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-center">
                                <i class="fas fa-question-circle fa-2x text-primary me-2"></i>
                                <div>
                                    <h4 class="mb-0">@Model.Questions.Count</h4>
                                    <small class="text-muted">Questions</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-center">
                                <i class="fas fa-clock fa-2x text-info me-2"></i>
                                <div>
                                    <h4 class="mb-0">@Model.DurationMinutes</h4>
                                    <small class="text-muted">Minutes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex align-items-center justify-content-center">
                                <i class="fas fa-star fa-2x text-warning me-2"></i>
                                <div>
                                    <h4 class="mb-0">@Model.MaxPoints</h4>
                                    <small class="text-muted">Total Points</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Exam Questions Preview -->
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                var question = Model.Questions[i];
                <div class="card question-card mb-4 fade-in" style="animation-delay: @(i * 0.1)s;">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <span class="question-number">@(i + 1)</span>
                            <div class="flex-grow-1">
                                <h5 class="mb-2">@question.Text</h5>
                                <span class="badge bg-info">@question.Points points</span>
                            </div>
                        </div>

                        <div class="answer-section">
                            <label class="form-label fw-bold">Student Answer Area:</label>
                            <textarea class="form-control" rows="3" disabled placeholder="Students will type their answer here..."></textarea>
                        </div>

                        <div class="mt-3 p-3 bg-success bg-opacity-10 border border-success rounded">
                            <strong class="text-success">
                                <i class="fas fa-check-circle me-1"></i>Correct Answer:
                            </strong>
                            <p class="mb-0 mt-2">@question.CorrectAnswer</p>
                        </div>
                    </div>
                </div>
            }

            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <p class="mb-3 text-muted">
                        <i class="fas fa-info-circle me-2"></i>
                        This is a preview mode. Students will be able to submit their answers when they take the exam.
                    </p>
                    <div class="d-grid gap-2 d-md-block">
                        <a asp-controller="Exam" asp-action="List" class="btn btn-primary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Exam List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add staggered fade-in animation
            const cards = document.querySelectorAll('.question-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                }, index * 100);
            });
        });
    </script>
}
