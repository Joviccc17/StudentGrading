@{
    ViewData["Title"] = "Home";
}

<div class="hero-section fade-in">
    <div class="container">
        <h1><i class="fas fa-graduation-cap"></i> Student Grading System</h1>
        <p class="lead">Modern exam management and grading platform for students and teachers</p>
        <div class="mt-4">
            @if (Context.Session.GetInt32("UserId") != null)
            {
                <a asp-controller="Exam" asp-action="List" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-clipboard-list me-2"></i>View Exams
                </a>
                <a asp-controller="Result" asp-action="Statistics" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-chart-bar me-2"></i>View Results
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Register
                </a>
            }
        </div>
    </div>
</div>

<div class="container">
@if (Context.Session.GetString("UserRole") == "Teacher")
{
    <div class="row mb-5">
        <div class="col-md-4 fade-in">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="fas fa-clipboard-list fa-3x mb-3" style="color: #667eea;"></i>
                    <div class="stat-number">@ViewBag.TotalExams</div>
                    <div class="stat-label">Total Exams</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in" style="animation-delay: 0.1s;">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-3x mb-3" style="color: #11998e;"></i>
                    <div class="stat-number">@ViewBag.TotalResults</div>
                    <div class="stat-label">Total Results</div>
                </div>
            </div>
        </div>
        <div class="col-md-4 fade-in" style="animation-delay: 0.2s;">
            <div class="card stat-card">
                <div class="card-body">
                    <i class="fas fa-users fa-3x mb-3" style="color: #f2994a;"></i>
                    <div class="stat-number">@ViewBag.TotalUsers</div>
                    <div class="stat-label">Total Users</div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-pen-fancy fa-4x mb-3" style="color: #667eea;"></i>
                    <h4>Create Exams</h4>
                    <p class="text-muted">Teachers can easily create and manage exams with multiple questions</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-tasks fa-4x mb-3" style="color: #11998e;"></i>
                    <h4>Take Exams</h4>
                    <p class="text-muted">Students can take exams online with instant feedback and grading</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-award fa-4x mb-3" style="color: #f2994a;"></i>
                    <h4>View Results</h4>
                    <p class="text-muted">Track performance with detailed statistics and grade reports</p>
                </div>
            </div>
        </div>
    </div>
</div>
